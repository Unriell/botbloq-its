[{
	"condition": "function(R) {   R.when(this.learningStyle.input == 'visual');   }",

	"consequence": "function(R) {   this.type = 'video';   R.stop();   }"
},{
	"condition": "function(R) {   R.when((this.learningStyle.input == 'verbal') && (this.learningStyle.perception == 'sensorial'));   }",

